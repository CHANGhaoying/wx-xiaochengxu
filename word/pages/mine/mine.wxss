/* pages/mine/mine.wxss */
page{
  width: 100%;
  height: 100%;
  background: #f9f9f9;
  box-sizing: border-box;
}
.bg{
  height: 320rpx;
  background-size:100%;
  padding-top: 40rpx;
  text-align: center;
  color: #594b44;
  font-size: 34rpx;
  box-sizing: border-box;
  background:url(https://apiwx.yanxian.org/static/img/mineBG.png);
}
.bg>view:last-child{
  font-size: 28rpx;
}
.avatar-box{
  width:140rpx;
  height: 140rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 auto 25rpx; 
}

.section{
 padding-top: 25rpx;
}
.section>view{
  display: flex;
}
.section>view:first-child{
  border-bottom: 1rpx solid #f9f9f9;
}
.section>view view{
  flex: 1;
  height: 240rpx;
  background: #fff;
  border-right: 1rpx solid #f9f9f9;
  text-align: center;
}
.section>view view:last-child{
  border: 0;
}
.section image{
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 80rpx auto 15rpx;
}
.section>view:last-child image{
  margin-top: 35rpx;
}
.section text{
  font-size: 30rpx;
  color: #666;
}
.section .news{
  position: relative;
}
.section .news span{
  position: absolute;
  background: #F43530;
  min-width: 36rpx;
  height: 40rpx;
  padding: 0 10rpx;
  border-radius:20rpx;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 40rpx;
  top:20rpx;
  left: 135rpx;
}