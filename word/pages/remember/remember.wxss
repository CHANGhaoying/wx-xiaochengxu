/* pages/remember/remember.wxss */
.rate{
  padding-left: 30rpx;
  margin: 40rpx 0;
}
.rate text{
  font-size: 28rpx;
  color: #626262;
}
.rate p{
  margin: 0 22rpx;
  width: 400rpx;
  background: #f3f3f3;
  vertical-align: middle;
  position: relative;
}
.rate p,span{
  display: inline-block;
  height: 25rpx;
  border-radius: 13rpx;
}
.rate p{
  overflow: hidden;
}
.rate span{
  background: #ffd656;
  position: absolute;
  top: 0;
  left: 0;
}

.card{
  width: 640rpx;
  height: 365rpx;
  margin: 60rpx auto;
  border-radius: 18rpx;
  box-shadow: 0 0 35rpx #ddd;
  text-align: center;
  box-sizing: border-box;
  padding-top: 110rpx;
  position: relative;
}
.word{
  font-size: 60rpx;
  color: #303030;
}
.synonyms .word{
  font-size: 46rpx;
}
.synonyms .soundmark{
  padding: 0 20rpx;
}
.soundmark{
  margin-top: 5rpx;
  color: #999;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
  /* 五角星收藏图标 */
.card>i{
  position: absolute;
  right: 30rpx;
  top: 25rpx;
  color: #ddd;
  font-size: 30rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
}
/* 已收藏的五角星 */
.card .col{
  color: #ffd656;
}
  /* 音标后小喇叭图标 */
.soundmark i{
  color: #ffd656;
  width: 80rpx;
  height: 80rpx;
  line-height: 90rpx;
  font-size: 46rpx;
}
.btns>view{
  width: 520rpx;
  height: 90rpx;
  margin: 0 auto 50rpx;
  position: relative;
}
.btns button{
  width: 100%;
  height: 100%;
  line-height: 90rpx;
  border-radius: 45rpx;
  border: 1rpx solid #ddd;
  font-size:32rpx;
  color: #626262; 
}
.btns button::after{
  border: none;
}

.btns .yes,.btns .no{
  background: #4bb163;
  color: #fff;
  border: none;
}
.btns .no{
  background: #f66c6c;
}
.btns image{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  margin-top: -18rpx;
  display: none;
}
.btns .yes+image{
    display: block;
}
.btns .no+image+image{
    display: block;
}
.next{
  width:510rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #303030;
  font-size: 32rpx; 
  border-radius: 40rpx;
  background: #ffd656;
  margin: 60rpx auto;
}
.next::after{
  border: none;
}

.card-double{
  padding-top: 66rpx;
}
.card-double .topic{
  font-size: 28rpx;
  color: #626262;
  margin-top:18rpx;
}