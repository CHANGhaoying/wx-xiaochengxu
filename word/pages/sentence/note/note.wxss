/* pages/sentence/note/note.wxss */
page{
  padding:114rpx 0 20rpx;
}
.nav{
  box-sizing: border-box;
  padding: 0 90rpx;
  height: 114rpx;
  line-height: 114rpx;
  position: fixed;
  left: 0;
  top: 0;
  width:100%;
  z-index:10;
  background: #fff;
  border-bottom: 12rpx solid #eee;
}
.nav li{
  display: inline-block;
  width: 49%;
  height: 100%;
  text-align: center;
  font-size: 32rpx;
  color: #838383;
}
.nav li text{
  height: 98%;
  display: inline-block;
  padding: 0 20rpx;
  box-sizing:border-box;
}
.nav .active text{
  border-bottom: 5rpx solid #3252F5;
}
.nav .active{
  color: #323232;
}

.sentence-wrap{
  border-bottom: 1rpx solid #ddd;
}
.breviary {
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 32rpx;
  color: #626262;
  padding: 30rpx 100rpx 30rpx 30rpx;
  position: relative;
}
.breviary icon{
  font-size: 50rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  height: 60rpx;
  margin-top: -25rpx; 
}
.breviary view{
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 34rpx;
}
.kong{
  text-align: center;
  color: #C0C0C0;
  font-size: 32rpx;
  padding-top: 30rpx;
}
.kong image{
  width: 280rpx;
  height: 280rpx;
  display: block;
  margin: 0 auto 20rpx;
}
/* 到底了 */
.hint{
  padding:20rpx 0 30rpx;
  color: #aaa;
  text-align: center;
  font-size: 28rpx;
}