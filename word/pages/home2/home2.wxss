/* pages/home2/home2.wxss */
page{
  width: 100%;
  height: 100%;
  position: relative;
}
.home2{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.city{
  padding: 0 34rpx;
  font-size: 32rpx;
  color: #202222;
  display: flex;
  align-items: center;
  height: 100rpx;
}
.city image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.city text{
  padding: 0 10rpx;
}
.city i{
  font-size: 34rpx;
  padding-top: 6rpx;
}
.all-class{
  margin: 15rpx 0;
  white-space:nowrap;
  padding-left: 34rpx;
  height: 188rpx;
}
/* 滚动条隐藏 */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.all-class .nav{
  display: inline-block;
  width: 200rpx;
  height: 188rpx;
  border-radius: 7rpx;
  font-size: 28rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin-right: 13rpx;
}
.all-class .nav1 h2{
  color: #4c2521;
}
.all-class .nav1 text{
  color: #865968;
}
.all-class .nav2 h2{
  color: #563801;
}
.all-class .nav2 text{
  color: #7b6f57;
}
.all-class .nav3 h2{
  color: #061e47;
}
.all-class .nav3 text{
  color: #637084;
}
.all-class text{
  font-size:22rpx;
  display: block;
}

.tap-control view{
  margin-right: 90rpx;
}
/* 引入列表公共样式  包括tap导航 及评论输入框*/
@import "../../utils/top-list.wxss";

/* 城市列表 */
.cover{
  width: 100%;
  height:100%;
  background: rgba(0,0,0,0.5);
  position: absolute;
  top:0;
  z-index: 101;
}
.cover>view{
  background: #fff;
  height: 80%;
  width: 100%;
  position: fixed;
  bottom: 0;
  overflow: auto;
}
.cover .close{
  position: fixed;
  top: 20%;
  width: 100%;
  z-index: 2;
  background: #fff;
}
.cover text{
  padding: 35rpx 40rpx;
  color: #999;
  display: inline-block;
}
.cover .btn-box{
  display: flex;
  flex-wrap:wrap;
  padding:0 15rpx;
  box-sizing: border-box;
  margin-top: 125rpx;
}
.cover button{
  width: 31%;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 30rpx;
  color: #202222;
  background: #fff;
  border-radius: 6rpx; 
  border: 1rpx solid  #ddd;
  margin-bottom: 20rpx;
}
.cover button::after{
  border: none;
}

.kong{
  text-align: center;
  color: #C0C0C0;
  font-size: 32rpx;
  padding-top: 30rpx;
}
.kong image{
  width: 280rpx;
  height: 280rpx;
  display: block;
  margin: 0 auto 20rpx;
}
.all-class .kong{
  padding: 0;
}
.all-class .kong text{
  font-size: 30rpx;
}
.all-class .kong image{
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 10rpx;
}

/* 引入排行榜rankinglist样式*/
@import "../../utils/rankinglist.wxss";
/* 提示：我是有底线的 */
.hint{
  padding-bottom: 30rpx;
  color: #aaa;
  text-align: center;
  font-size: 28rpx;
}

/* 遮罩层 */
.phone-cover,.allow-cover{
  height: 100%;
  width: 100%;
  background: rgba(0,0,0,0.2);
  position:absolute;
  top: 0;
  z-index: 5;
}
/* 授权登录 */
.allow-cover{
  background: #3252f5;
  color: #fff; 
  text-align: center;
  font-size: 30rpx;
  z-index: 6;
}
.allow-cover image{
  display: block;
  margin: 80rpx auto;
  width: 260rpx;
  height: 260rpx;
  border-radius: 50%;
}
.allow-cover button{
  background: #ffd556;
  margin-top: 100rpx;
  width: 80%;
  height: 80rpx;
  border-radius: 40rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  color: #3e3e3e; 
}
.allow-cover button::after{
  border: none;
}

  /* 绑定手机号 */
.phone{
  width: 600rpx;
  height: 670rpx;
  border-radius: 20rpx;
  margin: 200rpx auto 0;
  background: #fff;
  font-size: 34rpx;
  color: #242424;
  text-align: center;
  padding: 68rpx 66rpx;
  box-sizing: border-box;
}
.phone view.txt{
  color: #7d7d7e;
  font-size: 28rpx;
  margin: 26rpx 0 66rpx;
}
.phone input{
  border: 1rpx solid #a3a3a3;
  height: 70rpx;
  background: #f6f6f6;
  margin-bottom: 26rpx;
  font-size: 26rpx;
  text-align: left;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.phone .group{
  display: flex;
  justify-content: space-between;
  margin-bottom: 54rpx;
}
.phone .group input,
.phone .group button{
  width:242rpx;
  margin: 0;
}
.phone .group button{
  width:218rpx;
  font-size: 22rpx;
  background: #f66c6c;
  border-radius: 0;
  line-height: 70rpx;
  color: #fff;
}
.phone button::after{
  border: none;
}
.phone>button:last-child{
  background: #4bb163;
  width: 352rpx;
  height: 80rpx;
  border-radius: 40rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 34rpx;
}
