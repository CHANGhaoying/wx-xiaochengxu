/* pages/ranking/ranking.wxss */
page{
  width: 100%;
  height: 100%;
}
.ranking{
  width: 100%;
  height: 102%;
}
.nav{
  width: 100%;
  padding: 50rpx 0;
  display: flex;
  justify-content: space-around;
  position: fixed;
  z-index: 5;
  background: #fff;
  top: 0;
  left: 0;
}
.nav li{
  font-size: 38rpx;
  color: #858585;
  position: relative;
}
.nav li.active{
  color: #323232;
}

.nav li.active i{
  width: 60%;
  height: 100%;
  border-bottom: 5rpx solid #ffd656;
  position: absolute;
  top: 8rpx;
  left: 50%;
  margin-left: -30%;
}
.olist{
  padding-top: 160rpx;
}
.item{
  border-top: 1rpx solid #ddd;
  display: flex;
  align-items: center;
  margin: 0 40rpx; 
  position: relative;
  padding: 50rpx 0 30rpx;
}
.first{
  border: none;
}

.item image{
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
}
.item>view{
  margin: 0 20rpx ;
  color: #626262;
  font-size: 24rpx;
}

.item .num{
  font-size: 30rpx;
  color: #3e3e3e;
  width: 50rpx;
}
.item .nickname{
  color: #2b2b2b;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.item .days{
  position: absolute;
  right: 20rpx;
  bottom: 38rpx;
}
.top image{
  width: 90rpx;
  height: 90rpx;
}
.top .num{
  font-size: 36rpx;
}
.top .nickname{
  font-size: 34rpx;
}
/* 提示：我是有底线的 */
.hint{
  padding-right: 30rpx;
  color: #aaa;
  text-align: center;
  font-size: 28rpx;
}
.crown-box{
  position: relative;
}
.item .crown{
  width: 104rpx;
  height: 104rpx;
  position: absolute;
  border: 0;
  left: -35rpx;
  top: -35rpx;
}
#self-box{
  position: fixed;
  bottom: 0;
  padding: 40rpx 0;
  background: #fff;
}
#self{
  background: #ffd656;
  padding: 0 40rpx;
  width: 590rpx;
  height: 110rpx;
  border-radius: 55rpx;
  
}
/* 底部空白块，垫高整个页面 */
.foot{
  height: 200rpx;
}
#self .rank{
  height: 62rpx;
  line-height: 100rpx;
}
#self image{
  width: 70rpx;
  height: 70rpx;
}
#self .nickname{
  font-size: 28rpx;
  margin-bottom: 5rpx;
}
#self view{
  font-size: 22rpx;
}
.share{
  width: 100rpx;
  height: 80rpx;
  line-height: 80rpx;
  position: absolute;
  right: 20rpx;
  background: #ffd656;
}
.share::after{
  border: none;
}
.share i{ 
  font-size: 40rpx;
}

/* 预览并保存分享图片 */
.img-view {
  text-align: center;
  width: 100%;
  height: 100%;
  background: #ddd;
  padding-top: 20rpx; 
  box-sizing: border-box;
}
.img-view image{
  margin-bottom: 10rpx;
}
/* 画布 */
canvas{
  position: fixed;
  top: 0;
  left: 100%;
}



