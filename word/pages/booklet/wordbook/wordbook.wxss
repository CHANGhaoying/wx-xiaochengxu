/* pages/booklet/wordbook/wordbook.wxss */
page{
  height:100%;
  width: 100%;
}
.book{
  height: 100%;
  width: 100%;
  padding-top: 115rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  position: relative;
}
.nav{
  height: 114rpx;
  line-height: 114rpx;
  position: fixed;
  left: 0;
  top: 0;
  width:100%;
  z-index:10;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}
.nav li{
  display: inline-block;
  width: 33%;
  height: 100%;
  text-align: center;
  font-size: 33rpx;
  color: #838383;
  position: relative;
  
}
.nav li>span{
  height: 98%;
  display: inline-block;
  padding: 0 20rpx;
  box-sizing:border-box; 
}
.nav li>view{
  width: 100%;
  position: absolute;
  top: 120rpx;
  box-shadow: 0 0 10rpx 10rpx #ddd;
}
.nav li>view view{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #ddd; 
  background: #fff;
}
.nav li>view .is{
  color: #fff;
  background: #4285F4;
}
.nav .active,
.nav .active i{
  color: #323232;
}
.nav .active span{
  border-bottom: 5rpx solid #3252F5;
}
.nav i{
  color: #838383;
  font-size: 16rpx;
}
.section{
  flex: 1;
  display: flex; 
}
.aside{
  width: 274rpx;
  height: 100%;
}
.aside-bg{
  background:#e7e7e7;
}
.aside view{
  height: 98rpx;
  line-height: 98rpx;
  border-bottom: 2rpx solid #fff;
  text-align: center;
  font-size: 34rpx;
  color: #323232;
}
.aside .active{
  background: #fafafa;
}
.group{
  flex: 1;
  overflow:auto;
}
.group view{
  border-bottom: 1rpx solid #eee;
  height: 84rpx;
  line-height: 84rpx;
  color: #838383;
  font-size: 26rpx;
  padding: 0 64rpx;
}
.group i{
  float: right;
}
.kong{
  height: auto;
  width: 100%;
  position: absolute;
  top: 114rpx;
  left: 0;
  text-align: center;
  padding-top: 200rpx;
  color: #C0C0C0;
  font-size: 32rpx;
  box-sizing: border-box;
}
.kong image{
  width: 280rpx;
  height: 280rpx;
  display: block;
  margin: 0 auto;
}


.words .title{
  height: 64rpx;
  line-height: 64rpx;
  background: #f6f6f6;
  padding: 0 58rpx;
}
.words .word-item{
   padding: 0 58rpx;
   height: 98rpx;
   line-height: 98rpx;
   border-bottom: 1rpx solid #eee;
   position: relative;
}
.words .last{
  border: none;
}
.words text{
  font-size: 28rpx;
  color: #c8c8c8;
}
.words span{
  color: #8f8f8f;
  font-size: 32rpx;
}

.words i.icon-shengyin{
  color: #ffd656;
  height: 80rpx;
  width: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 44rpx;
  position: absolute;
  top:14rpx;
}
.words .right,
.date{
  float: right;
}
/* 提示：我是有底线的 */
.hint{
  padding: 50rpx 0;
  color: #aaa;
  text-align: center;
  font-size: 28rpx;
}
button{
  font-size: 36rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 0;
  color: #303030;
  background: #ffd656;
  position: fixed;
  bottom: 0;
}
button::after{
  border: none;
}
/* 词意例句展示容器 */
.show-box{
  margin-top: 30rpx;
  padding-bottom: 50rpx;
  border-bottom: 1rpx solid #eee;
}

